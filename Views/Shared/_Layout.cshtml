<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] BlowFish Encrypted Chat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SignalRChat.styles.css" asp-append-version="true" />

    <style>
    body {
        margin: 0;
        padding: 0;
    }

    .align-middle-custom {
        display: flex;
        align-items: center;
    }

    .content-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    #messagesList li {
    margin-bottom: 10px;
    }

    #messagesList li.decrypted {
    font-style: italic;
    }

    .chat-messages {
        max-height: 300px; 
        height: 300px;
        overflow-y: auto;
    }

    .chat-messages li {
        display: inline-block;
        max-width: 70%;
        margin-bottom: 10px;
    }

    .chat-messages::-webkit-scrollbar {
        width: 8px;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background-color: #164863;
        border-radius: 4px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background-color: #e5e5e5;
    }

    .card {
        width: 600px;
        height: 700px;
        margin: 0 auto;
    }
    
    .card-body{
            border-radius: 0 0 15px 15px;
    }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BLOWFISHCHAT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <!-- Apply the custom class for vertical alignment -->
                                <span class="navbar-text align-middle-custom" style="padding-top:9.5px;">
                                    Welcome, @User.Identity.Name!
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="form-inline">
                                    <!-- Apply the custom class for vertical alignment -->
                                    <button type="submit" class="btn btn-link nav-link align-middle-custom">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container c-body">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BLOWFISHCHAT
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
